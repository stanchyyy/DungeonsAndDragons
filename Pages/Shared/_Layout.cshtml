<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dungeons And Dragons</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light py-0 my-0">
    <header class="bg-dark">
        <div class="container sticky-top h-auto">
            <nav class="navbar navbar-expand-xl navbar-dark ">
                <a class="navbar-brand">
                    <img src="~/Images/Dungeons_&_Dragons_5th_Edition_logo.svg" width="200" height="30" alt="D&D Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Story</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Rankig</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Donate</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link">
                                Registered Players <span class="badge rounded-pill bg-danger">0</span>
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="card-footer  mt-3 pt-1 bg-dark">
        <div class="container">

            <ul class="nav justify-content-center">
                <li class="nav-item"><a href="#" class="nav-link pt-1 text-muted">About</a></li>
                <li class="nav-item"><a href="#" class="nav-link pt-1 text-muted">Contacts</a></li>
                <li class="nav-item"><a href="#" class="nav-link pt-1 text-muted">Meet the team</a></li>
            </ul>
            <p class="text-center text-muted">&copy; 2021 Stanislav Atanasov, Inc</p>

        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
